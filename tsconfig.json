{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "public"
  ]
}